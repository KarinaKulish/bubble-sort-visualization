<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sky1"
    android:startOffset="1000">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bubble sort"
        android:id="@+id/button"
        android:layout_row="0"
        android:layout_column="0"
        android:textSize="16dp"
        android:padding="15dp"
        android:layout_alignParentRight="true"
        android:onClick="onAnimationImageFour" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shuffle"
        android:id="@+id/button2"
        android:layout_row="0"
        android:layout_column="1"
        android:textSize="16dp"
        android:padding="15dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/button"
        android:onClick="onAnimationShuffle" />



    <!-- android:layout_width="92dp"
            android:layout_height="92dp"-->

    <ImageView

        android:layout_width="92dp"
        android:layout_height="92dp"
        android:id="@+id/imageView"
        android:src="@drawable/sheep2"
        android:layout_toLeftOf="@+id/imageView2"
        android:layout_alignParentBottom="true"
        android:layout_alignTop="@+id/imageView2" />


    <ImageView
        android:id="@+id/imageView2"
        android:src="@drawable/sheep3"
        android:layout_width="92dp"
        android:layout_height="92dp"
        android:layout_toLeftOf="@+id/imageView3"
        android:layout_alignParentBottom="true"

    />

    <ImageView
        android:id="@+id/imageView3"
        android:src="@drawable/sheep4"
        android:layout_width="92dp"
        android:layout_height="92dp"
        android:layout_toLeftOf="@+id/imageView4"
        android:layout_alignParentBottom="true"

        />

    <ImageView
        android:id="@+id/imageView4"
        android:src="@drawable/sheep5"
        android:layout_width="92dp"
        android:layout_height="92dp"
        android:layout_toLeftOf="@+id/imageView5"
        android:layout_alignParentBottom="true" />

    <ImageView
        android:id="@+id/imageView5"
        android:src="@drawable/sheep6"
        android:layout_width="92dp"
        android:layout_height="92dp"
        android:layout_toLeftOf="@+id/imageView6"
        android:layout_alignParentBottom="true"
        />
    <ImageView
        android:id="@+id/imageView6"
        android:src="@drawable/sheep7"
        android:layout_width="92dp"
        android:layout_height="92dp"
        android:layout_toLeftOf="@+id/imageView7"
        android:layout_alignParentBottom="true"

        />
    <ImageView
        android:layout_width="92dp"
        android:layout_height="92dp"
        android:id="@+id/imageView7"
        android:src="@drawable/sheep8"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        />
    <ImageView
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:id="@+id/imageView_ufo"
        android:src="@drawable/ufo"
        android:layout_below="@+id/button"
        android:layout_toLeftOf="@+id/imageView3" />





</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sky1"
    android:orientation="horizontal"
    android:startOffset="1000">

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:onClick="onAnimationImageFour"
        android:padding="15dp"
        android:text="@string/btn_name_two"
        android:textSize="16sp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/button"
        android:onClick="onAnimationShuffle"
        android:padding="15dp"
        android:text="@string/btn_name_one"
        android:textSize="16sp" />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="92dp"
        android:layout_height="92dp"
        android:layout_alignParentBottom="true"
        android:layout_alignTop="@+id/imageView2"
        android:layout_toStartOf="@+id/imageView2"
        android:contentDescription="@string/description"
        android:src="@drawable/sheep2" />


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="92dp"
        android:layout_height="92dp"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/imageView3"
        android:contentDescription="@string/description"
        android:src="@drawable/sheep3" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="92dp"
        android:layout_height="92dp"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/imageView4"
        android:contentDescription="@string/description"
        android:src="@drawable/sheep4" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="92dp"
        android:layout_height="92dp"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/imageView5"
        android:contentDescription="@string/description"
        android:src="@drawable/sheep5" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="92dp"
        android:layout_height="92dp"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/imageView6"
        android:contentDescription="@string/description"
        android:src="@drawable/sheep6" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="92dp"
        android:layout_height="92dp"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/imageView7"
        android:contentDescription="@string/description"
        android:src="@drawable/sheep7"/>

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="92dp"
        android:layout_height="92dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:contentDescription="@string/description"
        android:src="@drawable/sheep8" />

    <ImageView
        android:id="@+id/imageView_ufo"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_below="@+id/button"
        android:layout_toStartOf="@+id/imageView3"
        android:contentDescription="@string/description1"
        android:src="@drawable/ufo" />
</RelativeLayout>